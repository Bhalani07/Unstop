@model Unstop.Models.DTO.CompanyDTO;

@{
    ViewData["Title"] = "Company Register Page";
}

<div class="container-fluid login-page">
    <div class="position-absolute z-n1 login-page-right-bg">
        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/right-vector.png?d=1194x852" alt="login-right" class="" />
    </div>

    <div class="d-flex justify-content-center align-items-center login-page-form">
        <div class="container border border-1 rounded-2 shadow-lg bg-white px-lg-3 px-1 py-5 d-flex justify-content-around">
            <div id="carouselExampleIndicators" class="carousel slide login-page-form-left p-lg-5 p-md-3 p-1" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/login-img-1.png?d=734x734" alt="login-middle">
                    </div>
                    <div class="carousel-item">
                        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/login-img-6.png?d=734x734" alt="login-middle">
                    </div>
                </div>
            </div>

            <div class="login-page-form-right d-flex flex-column justify-content-around align-items-center w-100 p-lg-5 m-lg-5 p-md-3 m-md-3 p-1 m-1">
                <div class="d-flex justify-content-center mb-5">
                    <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/unstop/svg/unstop-logo.svg" alt="login-logo" class="h-100 w-75" />
                </div>

                <form class="w-100" method="post">
                    <input type="hidden" asp-for="UserId" />

                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="CompanyName" type="text" class="form-control bg-transparent border border-1 border-primary rounded-2 shadow-none" id="floatingCompanyName" placeholder="Tatvasoft">
                        <label for="floatingCompanyName">Company Name</label>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Email" type="email" class="form-control bg-transparent border border-1 border-primary rounded-2 shadow-none" id="floatingEmail" placeholder="abc@xyz.com" disabled>
                        <label for="floatingEmail">Email</label>
                    </div>
                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="PhoneNumber" type="tel" class="form-control bg-transparent border border-1 border-primary rounded-2 shadow-none" id="floatingPhone" placeholder="+91-12345 67890">
                        <label for="floatingPhone">PhoneNumber</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="row g-1 gap-3">
                        <div class="col form-floating mb-3 position-relative">
                            <select asp-for="Industry" class="form-select shadow-none border border-1 border-primary rounded-2" aria-label="Default select example">
                                <option selected disabled value="">Select Any Industry</option>
                                <option value="Information Technology">Information Technology</option>
                                <option value="Education">Education</option>
                                <option value="Construction">Construction</option>
                                <option value="Automotive">Automotive</option>
                                <option value="Healthcare">Healthcare</option>
                            </select>
                            <span asp-validation-for="Industry" class="text-danger"></span>
                        </div>
                        <div class="col form-floating mb-3 position-relative">
                            <input asp-for="City" type="text" class="form-control bg-transparent border border-1 border-primary rounded-2 shadow-none" id="floatingCity" placeholder="Ahmedabad">
                            <label for="floatingCity">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>                            
                        </div>
                    </div>

                    <div class="form-floating mb-3 position-relative">
                        <select asp-for="CompanySize" class="form-select shadow-none border border-1 border-primary rounded-2" aria-label="Default select example">
                            <option selected disabled value="">Select Company Size</option>
                            <option value="Start-up">Start-up</option>
                            <option value="Small">Small (1-50 Employees)</option>
                            <option value="Medium">Medium (51-200 Employees)</option>
                            <option value="Large">Large (201-1000 Employees)</option>
                            <option value="Enterprise">Enterprise (1000+ Employees)</option>
                        </select>
                        <span asp-validation-for="CompanySize" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <button class="btn btn-primary rounded-pill shadow-none px-5" type="submit"><b>Create</b></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="position-absolute z-n1 login-page-left-bg">
        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/left-vector.png?d=1190x874" alt="login-left" class="" />
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}