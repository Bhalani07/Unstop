@model Unstop.Models.DTO.JobFairDTO;

@{
    ViewData["Title"] = "Job Fair Information";

    string startTime = new DateTime().Add(Model.StartTime).ToString("hh");
    string endTime = new DateTime().Add(Model.EndTime).ToString("hh tt");
}

<div class="container-fluid d-flex justify-content-center">
    <div class="container p-5 m-5 position-relative" style="background-color: #BFDCF9">
        <div class="d-flex flex-column justify-content-center align-items-center p-3 border border-3 border-white">
            <div class="my-3 d-flex flex-column justify-content-center align-items-center">
                <h1 class="fw-bolder">@Model.Title</h1>
                <h6 class="text-white">by</h6>
                <h3 class="fw-bold">@Model.Organizer</h3>
            </div>
            <div class="my-1">
                @if (Model.StartDate.Month == Model.EndDate.Month)
                {
                    <h4 class="text-white">@Model.StartDate.Date.ToString("dd") - @Model.EndDate.Date.ToString("dd") @Model.EndDate.Date.ToString("MMMM, yyyy")</h4>
                }
                else
                {
                    <h4 class="text-white">@Model.StartDate.Date.ToString("dd MMMM") - @Model.EndDate.Date.ToString("dd MMMM") @Model.EndDate.Date.ToString(", yyyy")</h4>
                }
            </div>
            <div class="my-1 d-flex justify-content-between align-items-center border-bottom border-3 border-white">
                <div class="me-3" style="background-color: white; border-radius: 100%; height: 15px; width: 15px;"></div>
                <div>
                    <h5>From @startTime - @endTime</h5>
                </div>
                <div class="ms-3" style="background-color: white; border-radius: 100%; height: 15px; width: 15px;"></div>
            </div>
            <div class="my-3">
                <h5 class="fw-bold">AT @Model.Location</h5>
            </div>
            <div class="my-3 p-3">
                <p>@Model.Description</p>
            </div>
            <div class="d-flex flex-column justify-content-center">
                <h5 class="text-center fw-bold">Job Level</h5>
                <ul class="d-flex gap-5">
                    @foreach (var item in Model.JobLevel)
                    {
                        <li class="fs-6">@item</li>
                    }
                </ul>
            </div>
        </div>
        <div class="position-absolute bottom-0 end-0 w-25 h-25">
            <img class="img-fluid" src="https://cdn.unstop.com/uploads/images/unstop/user-referral/header-img.png?d=1478x907" alt="jobFair" />
        </div>
    </div>
</div>