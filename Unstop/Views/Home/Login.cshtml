@model Unstop.Models.DTO.LoginRequestModel;

@{
    ViewData["Title"] = "Login Page";
}

<div class="container-fluid login-page">
    <div class="position-absolute z-n1 login-page-right-bg">
        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/right-vector.png?d=1194x852" alt="login-right" class="" />
    </div>

    <div class="d-flex justify-content-center align-items-center login-page-form">
        <div class="container border border-1 rounded-2 shadow-lg bg-white px-lg-3 px-1 py-5 d-flex justify-content-around">
            <div id="carouselExampleIndicators" class="carousel slide login-page-form-left p-lg-5 p-md-3 p-1" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/login-img-1.png?d=734x734" alt="login-middle">
                    </div>
                    <div class="carousel-item">
                        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/login-img-6.png?d=734x734" alt="login-middle">
                    </div>
                </div>
            </div>

            <div class="login-page-form-right d-flex flex-column justify-content-around align-items-center w-100 p-lg-5 m-lg-5 p-md-3 m-md-3 p-1 m-1">
                <div class="d-flex justify-content-center mb-5">
                    <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/unstop/svg/unstop-logo.svg" alt="login-logo" class="h-100 w-75" />
                </div>

                <form class="w-100" method="post">
                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Email" type="email" class="form-control bg-transparent border border-1 border-primary rounded-2 shadow-none" id="floatingEmail" placeholder="Email Id">
                        <label for="floatingEmail">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Password" type="password" class="form-control bg-transparent border border-1 border-primary rounded-2 shadow-none" id="floatingPassword" placeholder="Enter Your Password">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="eye-icon position-absolute top-0 end-0 mx-3 my-3">
                            <i class="fa-solid fa-eye fs-5 text-muted mt-1" id="togglePassword" onclick="showPassword()"></i>
                        </div>
                    </div>
                    <div class="mb-3 text-primary">
                        <a asp-action="Forgot" asp-controller="Home"><i class="fa-solid fa-lock me-2"></i>Forgot Password?</a>
                    </div>
                    <button class="btn btn-primary rounded-pill shadow-none w-100 mb-3" type="submit"><b>Log in</b></button>
                    <a asp-action="Register" asp-controller="Home" class="btn border border-1 rounded-pill shadow-none w-100"><small>Don't have an account? <span class="text-primary">Sign up</span></small></a>
                </form>
            </div>
        </div>
    </div>

    <div class="position-absolute z-n1 login-page-left-bg">
        <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/login/left-vector.png?d=1190x874" alt="login-left" class="" />
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        window.history.forward(1);

        function showPassword() {

            const togglePassword = document.querySelector("#togglePassword");
            const password = document.querySelector("#floatingPassword");

            const type = password.getAttribute("type") === "password" ? "text" : "password";
            password.setAttribute("type", type);

            togglePassword.classList.toggle('fa-eye');
            togglePassword.classList.toggle('fa-eye-slash');
        }
    </script>
}