@model Unstop.Models.DTO.JobFairDTO;

@{
    ViewData["Title"] = "Post Job Fair";
}

<partial name="_Header" />

<div class="container pb-5 mb-5">
    <div class="d-flex justify-content-between">
        <div class="d-flex justify-content-center align-items-center">
            <a asp-action="Dashboard" asp-controller="Company" class="btn border border-1 border-primary rounded-pill shadow-none"><i class="fa-solid fa-chevron-left"></i></a>
        </div>
        <div>
            <h4 class="my-5">New Job Fair Details</h4>
        </div>
        <div></div>
    </div>

    <form class="w-100 mb-5" method="post">
        <input type="hidden" asp-for="CompanyId" />
        <input type="hidden" asp-for="Organizer" />

        <div class="mb-3">
            <label for="inputCompany" class="form-label fw-bold">Organizer <sup class="text-danger">*</sup></label>
            <input asp-for="@Model.Organizer" disabled type="text" class="form-control shadow-none border border-1  rounded-2" id="inputCompany">
        </div>
        <div class="mb-3">
            <label for="inputTitle" class="form-label fw-bold">Job Fairs Title <sup class="text-danger">*</sup></label>
            <input asp-for="Title" type="text" class="form-control shadow-none border border-1  rounded-2" id="inputTitle">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="inputDescription" class="form-label fw-bold">Job Fair Description</label>
            <textarea asp-for="Description" rows="5" type="text" class="form-control h-100 shadow-none border border-1  rounded-2" id="inputDescription"></textarea>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <label for="inputStartDate" class="form-label fw-bold">Start Date <sup class="text-danger">*</sup></label>
                <input asp-for="StartDate" type="date" class="form-control shadow-none border border-1  rounded-2" id="inputStartDate" min="@DateTime.Now.Date.ToString("yyyy-MM-dd")">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label for="inputEndDate" class="form-label fw-bold">End Date <sup class="text-danger">*</sup></label>
                <input asp-for="EndDate" type="date" class="form-control shadow-none border border-1  rounded-2" id="inputEndDate" min="@DateTime.Now.Date.ToString("yyyy-MM-dd")">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <label for="inputStartTime" class="form-label fw-bold">Start Time <sup class="text-danger">*</sup></label>
                <input asp-for="StartTime" type="time" class="form-control shadow-none border border-1  rounded-2" id="inputStartTime">
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label for="inputEndTime" class="form-label fw-bold">End Time <sup class="text-danger">*</sup></label>
                <input asp-for="EndTime" type="time" class="form-control shadow-none border border-1  rounded-2" id="inputEndTime">
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label for="inputLocation" class="form-label fw-bold">Job Fair Location <sup class="text-danger">*</sup></label>
            <input asp-for="Location" type="text" class="form-control shadow-none border border-1  rounded-2" id="inputLocation" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="inputLevel" class="form-label fw-bold">Job Level/Experience <sup class="text-danger">*</sup></label>
            <div id="inputLevel">
                <div class="form-check form-check-inline">
                    <input class="form-check-input shadow-none" type="checkbox" id="inlineCheckbox1" value="Entry Level" name="JobLevel">
                    <label class="form-check-label" for="inlineCheckbox1">Entry Level</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input shadow-none" type="checkbox" id="inlineCheckbox2" value="Mid Level" name="JobLevel">
                    <label class="form-check-label" for="inlineCheckbox2">Mid Level</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input shadow-none" type="checkbox" id="inlineCheckbox3" value="Senior Level" name="JobLevel">
                    <label class="form-check-label" for="inlineCheckbox3">Senior Level</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input shadow-none" type="checkbox" id="inlineCheckbox4" value="Executive Level" name="JobLevel">
                    <label class="form-check-label" for="inlineCheckbox4">Executive Level</label>
                </div>
            </div>
            <span asp-validation-for="JobLevel" class="text-danger"></span>
        </div>
        <div class="mb-3 d-flex justify-content-end">
            <button type="reset" onclick="resetValidation()" class="btn btn-outline-primary px-5 fw-bold me-1 shadow-none">Cancel</button>
            <button type="submit" class="btn btn-primary px-5 fw-bold ms-1 shadow-none">Post Fair</button>
        </div>
    </form>
</div>

<partial name="_Footer" />

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        const navLinks = document.querySelectorAll('.nav-link');
        const currentNav = document.getElementById('nav-home');
        navLinks.forEach(nav => nav.classList.remove('active'));
        currentNav.classList.add('active');
    </script>
}