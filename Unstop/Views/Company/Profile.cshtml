@model Unstop.Models.DTO.CompanyDTO;

@{
    ViewData["Title"] = "Profile";
}

<partial name="_Header" />

<div class="container mb-5 pb-5">
    <div class="row p-5" style="background-color: #BFDCF9">
        <div class="col-lg-7 col-12 ps-sm-4 ps-1 ms-md-5 ms-1 my-5 d-md-flex">
            <div class="p-2 rounded-circle d-flex justify-content-center align-items-center" style="height: 100px; width: 100px; border-right: 5px solid #0d6efd;">
                @if(Model.Logo != null)
                {
                    <img class="d-block w-75 h-75" src="data:@Model.LogoContentType;base64,@Convert.ToBase64String(Model.Logo)" alt="user-photo" />
                    @* <img class="d-block w-75 h-75" src="https://localhost:7002/QRs/Apple-10.png" alt="user-photo" /> *@
                }
                else
                {
                    <img class="d-block w-75 h-75" src="~/images/user.png" alt="user-photo" />
                }
            </div>
            <div class="ms-sm-3 mt-sm-0 mt-3">
                <h1>@Model.CompanyName</h1>
                <p><i class="fa-solid fa-envelope"></i> @Model.User.Email</p>
                <p><i class="fa-solid fa-location-dot"></i> @Model.City</p>
            </div>
        </div>
    </div>

    <div class="container p-md-5 pt-5">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.CompanyId" />
            <input type="hidden" asp-for="@Model.UserId" />

            <div class="mb-3 row">
                <label for="inputCompanyName" class="col-sm-2 col-form-label">Company Name <sup class="text-danger">*</sup></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.CompanyName" type="text" class="form-control shadow-none" id="inputCompanyName">
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputIndustry" class="col-sm-2 col-form-label">Industry <sup class="text-danger">*</sup></label>
                <div class="col-sm-10">
                    <select asp-for="@Model.Industry" class="form-select shadow-none" aria-label="Default select example">
                        <option selected disabled>Select Any Industry</option>
                        <option value="Information Technology">Information Technology</option>
                        <option value="Education">Education</option>
                        <option value="Construction">Construction</option>
                        <option value="Automotive">Automotive</option>
                        <option value="Healthcare">Healthcare</option>
                    </select>
                    <span asp-validation-for="Industry" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputSize" class="col-sm-2 col-form-label">Company Size <sup class="text-danger">*</sup></label>
                <div class="col-sm-10">
                    <select asp-for="@Model.CompanySize" class="form-select shadow-none" aria-label="Default select example">
                        <option selected disabled value="">Select Company Size</option>
                        <option value="Start-up">Start-up</option>
                        <option value="Small">Small (1-50 Employees)</option>
                        <option value="Medium">Medium (51-200 Employees)</option>
                        <option value="Large">Large (201-1000 Employees)</option>
                        <option value="Enterprise">Enterprise (1000+ Employees)</option>
                    </select>
                    <span asp-validation-for="CompanySize" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPhone" class="col-sm-2 col-form-label">Phone Number <sup class="text-danger">*</sup></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.PhoneNumber" type="tel" class="form-control shadow-none" id="inputPhone">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputWebsite" class="col-sm-2 col-form-label">Website URL</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.WebsiteUrl" type="text" class="form-control shadow-none" id="inputWebsite">
                    <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputLogo" class="col-sm-2 col-form-label">Company Logo</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.LogoFile" type="file" class="form-control shadow-none" id="inputLogo">
                    <span asp-validation-for="LogoFile" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputYear" class="col-sm-2 col-form-label">Founded Year</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.FoundedYear" type="text" class="form-control shadow-none" id="inputYear">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputCity" class="col-sm-2 col-form-label">City <sup class="text-danger">*</sup></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.City" rows="5" class="form-control shadow-none" id="inputCity">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputAddress" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                    <textarea asp-for="@Model.Address" rows="5" class="form-control shadow-none" id="inputAddress"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 d-flex justify-content-end gap-3">
                <button type="reset" onclick="resetValidation()" class="btn border border-2 shadow-none fw-bold px-5">Reset</button>
                <button type="submit" class="btn btn-primary shadow-none fw-bold px-5">Save</button>
            </div>
        </form>
    </div>
</div>

<partial name="_Footer" />

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <sctipt>
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(nav => nav.classList.remove('active'));
    </sctipt>
}