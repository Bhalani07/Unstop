@model Unstop.Models.DTO.ApplicationDTO;

<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered p-5">
        <div class="modal-content p-5">
            <div class="modal-body mb-3">
                Have you done your review to this application?
            </div>
            <div class="d-flex justify-content-center gap-3">
                <button type="button" class="btn btn-secondary shadow-none" data-bs-dismiss="modal">No</button>
                <a class="btn btn-primary shadow-none" asp-action="ReviewApplication" asp-controller="Company" asp-route-applicationId="@Model.ApplicationId" asp-route-jobId="@Model.JobId">Yes</a>
            </div>
        </div>
    </div>
</div>