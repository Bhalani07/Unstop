@model Unstop.Models.DTO.ApplicationDTO;

<div class="modal fade" id="applicationModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered p-5">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="filterModalLabel">Application Form</h1>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="PostApplication" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.JobId"/>
                <input type="hidden" asp-for="@Model.CandidateId"/>

                <div class="modal-body">
                    <div class="p-3">
                        <label for="inputResume" class="form-label">Upload Your Resume Here</label>
                        <input asp-for="@Model.ResumeFile" class="form-control" type="file" id="inputResume">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="reset" class="btn btn-secondary shadow-none" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary shadow-none">Apply</button>
                </div>
            </form>

        </div>
    </div>
</div>