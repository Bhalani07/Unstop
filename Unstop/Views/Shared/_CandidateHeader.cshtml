@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpAcc

<style>
    .nav-link.active {
        border: 1px solid blue;
        border-radius: 20px;
        padding: 6px 18px;
    }
</style>

<header class="position-sticky top-0 headerClass">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow shadow mb-3">
        <div class="container-fluid me-md-5 me-2 pe-md-5 pe-2">
            <a class="navbar-brand d-flex justify-content-center" asp-area="" asp-controller="Candidate" asp-action="Dashboard">
                <img src="https://d8it4huxumps7.cloudfront.net/uploads/images/unstop/svg/unstop-logo.svg" alt="unstop" class="h-100 w-25" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end align-items-center">
                <ul class="navbar-nav flex-grow-1 gap-3 justify-content-end align-items-center">
                    <li class="nav-item">
                        <a class="nav-link text-dark text-center" asp-area="" asp-controller="Candidate" asp-action="Dashboard" id="nav-home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark text-center " asp-area="" asp-controller="Candidate" asp-action="FavoriteJobs" id="nav-favorite">Favorite Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark text-center " asp-area="" asp-controller="Candidate" asp-action="Applications" id="nav-application">Applications</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark text-center " asp-area="" asp-controller="Candidate" asp-action="Calendar" id="nav-calendar">Calendar</a>
                    </li>
                    <li class="nav-item d-sm-block d-none">
                        <div class="vr h-100" style="width: 2px;"></div>
                    </li>
                </ul>
            </div>
            <div class="d-flex justify-content-center">
                <div class="dropdown">
                    <a class="btn border border-0 dropdown-toggle shadow-none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/images/user.png" height="40px" width="40px" alt="user" />
                    </a>
                    <ul class="dropdown-menu dropdown-menu-sm-end">
                        <li><a class="dropdown-item" asp-controller="Candidate" asp-action="Profile"><i class="fa-solid fa-user me-2"></i> Profile</a></li>
                        <li><a class="dropdown-item" asp-controller="Candidate" asp-action="Preferences"><i class="fa-solid fa-check-double me-2"></i> Preferences</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>